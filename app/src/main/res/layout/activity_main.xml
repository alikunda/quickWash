<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".MainActivity">
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="cursive"
            android:text="Welcome to Quick wash"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="40dip"></TextView>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView"
            android:layout_width="241dp"
            android:layout_height="223dp"
            android:layout_marginStart="85dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="76dp"
            android:background="#fff"
            android:foregroundGravity="center"
            android:src="@drawable/quickwash_logo_gif_for_use" />
    </RelativeLayout>
    <TableRow>
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        <TextView android:text="User name"
            android:padding="10dip"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="45dip"/>

        <EditText
            android:id="@+id/user_name"
            android:layout_marginTop="15dp"
            android:autoSizeTextType="uniform"
            android:hint="example@gmail.com"
            />

    </TableRow>

    <TableRow>
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        <TextView android:text="Password"
            android:padding="10dip"
            android:layout_marginLeft="45dip"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Atleast 8 characters"
            android:ems="10"
            android:inputType="textPassword" />
    </TableRow>
    <TableRow>
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        <TextView android:text="User Type"
            android:padding="10dip"
            android:layout_marginLeft="45dip"/>
        <RadioGroup
            android:id="@+id/radioUserTypeHome"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/userButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/adminButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/admin"/>
        </RadioGroup>
    </TableRow>
    <Button
        android:layout_column="1"
        android:layout_marginLeft="80dip"
        android:layout_marginRight="80dp"
        android:onClick="checkUser"
        android:text="Sign in" />
    <TableRow/>

    <Button
        android:id="@+id/register"
        android:layout_width="96dp"
        android:layout_marginLeft="80dip"
        android:layout_marginRight="80dp"
        android:layout_column="1"
        android:onClick="registerPage"
        android:text="Register" />

    <Button
        android:id="@+id/reset"
        android:layout_width="96dp"
        android:layout_marginLeft="80dip"
        android:layout_marginRight="80dp"
        android:onClick="reset"
        android:layout_column="1"
        android:text="Reset"
        />
        <!--android:onClick="reset"-->




    </TableLayout>